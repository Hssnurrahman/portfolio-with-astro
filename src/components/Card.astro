---
export interface Props {
  name: string;
  description: string;
  href?: string;
  tags?: string[];
}

const { name, description, href, tags } = Astro.props as Props;
---

<a href={href} target="_blank" aria-label="card">
  <div
    class="rounded overflow-hidden shadow-lg bg-white hover:bg-slate-50 hover:shadow-xl min-h-96"
  >
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2">{name}</div>
      <p class="text-gray-700 text-base">{description}</p>
    </div>
    <div class="px-6 py-4">
      {
        tags &&
          tags.map((tag) => {
            return (
              <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
                {tag}
              </span>
            );
          })
      }
    </div>
  </div>
</a>
