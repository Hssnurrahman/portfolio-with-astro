---
export interface Props {
  name: string;
  description: string;
  href?: string;
  tags?: string[];
}

const { name, description, href, tags } = Astro.props as Props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="group block h-full border border-gray-200 dark:border-gray-800 rounded-lg p-6 hover:border-gray-900 dark:hover:border-white transition-colors bg-white dark:bg-gray-950"
>
  <div class="flex flex-col h-full">
    <div class="flex items-start justify-between mb-4">
      <h3 class="text-xl font-bold text-gray-900 dark:text-white">
        {name}
      </h3>
      <svg
        class="w-5 h-5 text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white transition-colors"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
        ></path>
      </svg>
    </div>

    <p class="text-gray-600 dark:text-gray-400 mb-6 flex-1">
      {description}
    </p>

    {
      tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map((tag: string) => (
            <span class="text-xs px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full">
              {tag}
            </span>
          ))}
        </div>
      )
    }
  </div>
</a>
