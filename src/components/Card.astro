---
export interface Props {
  name: string;
  description: string;
  href?: string;
  tags?: string[];
}

const { name, description, href, tags } = Astro.props as Props;
---

<a href={href} target="_blank" aria-label="card" class="group block h-full">
  <div class="relative h-full rounded-3xl overflow-hidden bg-white/70 dark:bg-gray-800/70 backdrop-blur-xl border border-white/20 dark:border-gray-700/30 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-3 group-hover:border-primary-300/50 dark:group-hover:border-primary-600/50">
    
    <!-- Enhanced Gradient Overlays -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary-500/5 via-secondary-500/5 to-accent-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    
    <!-- Shine Effect -->
    <div class="absolute inset-0 bg-gradient-to-br from-white/20 via-transparent to-transparent opacity-30 dark:opacity-10"></div>
    
    <!-- Glow Effect -->
    <div class="absolute -inset-0.5 bg-gradient-to-r from-primary-500/20 via-secondary-500/20 to-accent-500/20 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-sm"></div>
    
    <div class="relative p-8 h-full flex flex-col">
      <!-- Header -->
      <div class="flex items-start justify-between mb-6">
        <div class="flex-1">
          <h3 class="font-bold text-2xl text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors duration-300 mb-2">
            {name}
          </h3>
          <div class="w-12 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-500"></div>
        </div>
        
        <!-- Enhanced Action Icon -->
        <div class="relative">
          <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-primary-500 to-secondary-500 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-500 transform group-hover:scale-110 shadow-lg">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </div>
          <div class="absolute inset-0 bg-gradient-to-br from-primary-400 to-secondary-400 rounded-2xl blur-lg opacity-0 group-hover:opacity-50 transition-opacity duration-500"></div>
        </div>
      </div>
      
      <!-- Description -->
      <p class="text-gray-600 dark:text-gray-400 text-base leading-relaxed mb-8 flex-1">
        {description}
      </p>
      
      <!-- Tags -->
      <div class="flex flex-wrap gap-2">
        {
          tags &&
            tags.map((tag: string) => {
              return (
                <span class="inline-flex items-center px-3 py-1.5 rounded-xl text-xs font-medium bg-white/60 dark:bg-gray-700/60 backdrop-blur-sm border border-white/20 dark:border-gray-600/30 text-gray-700 dark:text-gray-300 hover:bg-primary-50 dark:hover:bg-primary-900/20 hover:text-primary-700 dark:hover:text-primary-300 hover:border-primary-200 dark:hover:border-primary-700 transition-all duration-300">
                  {tag}
                </span>
              );
            })
        }
      </div>
      
      <!-- Hover State Indicator -->
      <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-primary-500 via-secondary-500 to-accent-500 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    </div>
  </div>
</a>
