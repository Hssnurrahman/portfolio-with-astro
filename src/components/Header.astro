---

const navItems = [
  { href: "#home", label: "Home" },
  { href: "#skills", label: "Skills" },
  { href: "#projects", label: "Projects" },
  { href: "#about", label: "About" },
];
---

<header class="sticky top-0 z-50 bg-gray-100 dark:bg-gray-800 bg-opacity-90 dark:bg-opacity-90 backdrop-blur-md shadow-sm transition-all duration-300">
  <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <!--<div class="flex items-center">-->
    <!--  <Icon name="mdi:code-braces" class="w-8 h-8 text-indigo-600 dark:text-indigo-400" />-->
    <!--</div>-->

    <nav class="flex-1 flex justify-center">
      <ul class="flex items-center space-x-6">
        {navItems.map((item) => (
            <li>
              <a
                  href={item.href}
                  class="text-gray-700 dark:text-gray-300 text-lg font-medium transition-all duration-200 relative group hover:text-indigo-600 dark:hover:text-indigo-400"
              >
                {item.label}
                <span class="absolute bottom-0 left-0 w-full h-0.5 bg-indigo-600 dark:bg-indigo-400 transform scale-x-0 transition-transform duration-200 group-hover:scale-x-100"></span>
              </a>
            </li>
        ))}
      </ul>
    </nav>

