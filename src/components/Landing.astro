---
import {Icon} from "astro-icon/components";
import { landingIcons } from "../data/LandingIcons";
import LandingIcon from "./LandingIcon.astro";

export interface IconProps {
  icon: string;
  href: string;
  className: string;
  ariaLabel: string;
}
---

<section
  id="home"
  class="min-h-screen flex justify-center items-center relative pt-24 bg-white dark:bg-gray-950"
  aria-label="landing"
>
  <div class="max-w-7xl mx-auto px-6 py-20 w-full">
    <div class="flex flex-col lg:flex-row items-center justify-between gap-16">
      <!-- Content -->
      <div class="flex-1 space-y-8">
        <div class="space-y-4">
          <p class="text-lg text-gray-600 dark:text-gray-400">Hi, I'm</p>
          <h1 class="text-6xl lg:text-8xl font-bold text-gray-900 dark:text-white">
            Hassan
          </h1>
          <h2 class="text-2xl lg:text-3xl text-gray-700 dark:text-gray-300">
            Full Stack Developer
          </h2>
        </div>

        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-xl leading-relaxed">
          I build elegant digital solutions that solve real problems. Focused on clean code, great UX, and scalable architecture.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="#projects"
            class="px-8 py-3 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-lg font-medium hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors text-center"
          >
            View My Work
          </a>
          <a
            href="#contact"
            class="px-8 py-3 border-2 border-gray-900 dark:border-white text-gray-900 dark:text-white rounded-lg font-medium hover:bg-gray-50 dark:hover:bg-gray-900 transition-colors text-center"
          >
            Get In Touch
          </a>
        </div>

        <!-- Social links -->
        <div class="flex items-center gap-4 pt-4">
          {
            landingIcons.map(({ ariaLabel, className, href, icon }: IconProps) => {
              return (
                <LandingIcon
                  ariaLabel={ariaLabel}
                  className={className}
                  href={href}
                  icon={icon}
                />
              );
            })
          }
        </div>
      </div>

      <!-- Image/Icon -->
      <div class="flex-1 flex justify-center">
        <div class="w-full max-w-md">
          <Icon
            name="landing"
            class="w-full h-auto text-gray-900 dark:text-white"
          />
        </div>
      </div>
    </div>
  </div>
</section>
