---
import {Icon} from "astro-icon/components";
import { landingIcons } from "../data/LandingIcons";
import LandingIcon from "./LandingIcon.astro";

export interface IconProps {
  icon: string;
  href: string;
  className: string;
  ariaLabel: string;
}
---

<section
  id="home"
  class="min-h-screen flex justify-center items-center relative overflow-hidden pt-24"
  aria-label="landing"
>
  <!-- Enhanced Background with animated mesh gradient -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-blue-50/30 to-purple-50/30 dark:from-gray-950 dark:via-blue-950/20 dark:to-purple-950/20 animated-gradient"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(56,189,248,0.1),transparent_25%),radial-gradient(circle_at_70%_80%,rgba(217,70,239,0.1),transparent_25%),radial-gradient(circle_at_80%_10%,rgba(249,115,22,0.08),transparent_25%)] animated-radial"></div>
  </div>
  
  <!-- Animated background elements with improved aesthetics -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="floating-orb absolute -top-40 -right-40 w-96 h-96 bg-gradient-to-br from-primary-200/40 to-secondary-200/40 rounded-full mix-blend-multiply filter blur-3xl opacity-60"></div>
    <div class="floating-orb absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-br from-secondary-200/40 to-accent-200/40 rounded-full mix-blend-multiply filter blur-3xl opacity-60" style="animation-delay: -2s;"></div>
    <div class="floating-orb absolute top-1/3 right-1/3 w-80 h-80 bg-gradient-to-br from-accent-200/30 to-primary-200/30 rounded-full mix-blend-multiply filter blur-3xl opacity-50" style="animation-delay: -1s;"></div>
    
    <!-- Particle effects -->
    <div class="particles">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
      <div class="particle particle-4"></div>
      <div class="particle particle-5"></div>
    </div>
  </div>

  <!-- Grid pattern overlay -->
  <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-30 dark:opacity-20"></div>

  <div class="relative z-10 flex justify-between items-center flex-col xl:flex-row w-[90%] max-w-8xl mx-auto py-20 gap-12">
    <div class="flex flex-col my-8 lg:my-0 justify-center items-start hero-content flex-1">
      <!-- Badge -->
      <div class="status-badge inline-flex items-center px-4 py-2 rounded-full bg-white/60 dark:bg-gray-800/60 backdrop-blur-xl border border-white/20 dark:border-gray-700/30 mb-8 shadow-lg">
        <div class="w-2 h-2 bg-green-500 rounded-full pulse-dot mr-3"></div>
        <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Available for new projects</span>
      </div>

      <!-- Main heading with enhanced typography -->
      <h1 class="hero-title text-6xl lg:text-8xl xl:text-9xl font-black leading-none mb-6">
        <span class="hero-greeting block bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 dark:from-white dark:via-gray-100 dark:to-white bg-clip-text text-transparent">
          Hi! I'm
        </span>
        <span class="hero-name block bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-600 bg-clip-text text-transparent gradient-text">
          Hassan
        </span>
      </h1>

      <!-- Subtitle with modern styling -->
      <div class="hero-subtitle relative mb-8">
        <p class="text-2xl lg:text-4xl font-light text-gray-600 dark:text-gray-400 mb-2 typewriter">
          Full Stack Developer
        </p>
        <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-full expanding-line"></div>
      </div>

      <!-- Description with better readability -->
      <p class="hero-description text-lg lg:text-xl text-gray-600 dark:text-gray-400 mb-12 max-w-2xl leading-relaxed font-light">
        Crafting exceptional digital experiences with cutting-edge technologies. 
        <span class="text-gray-800 dark:text-gray-200 font-medium highlight-text">Passionate about building scalable solutions</span> 
        that drive innovation and make a meaningful impact.
      </p>

      <!-- CTA Buttons -->
      <div class="hero-buttons flex flex-col sm:flex-row gap-4 mb-12">
        <a href="#projects" class="cta-primary group relative px-8 py-4 bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-600 text-white rounded-2xl font-semibold transition-all duration-300 hover:shadow-2xl hover:shadow-primary-500/25 overflow-hidden hover:-translate-y-1">
          <div class="absolute inset-0 bg-gradient-to-r from-primary-700 via-secondary-700 to-accent-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <span class="relative z-10 flex items-center gap-2">
            View My Work
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </span>
        </a>
        
        <a href="#contact" class="cta-secondary group px-8 py-4 bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl border border-white/20 dark:border-gray-700/30 text-gray-700 dark:text-gray-300 rounded-2xl font-semibold hover:bg-white dark:hover:bg-gray-800 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-1">
          <span class="flex items-center gap-2">
            Let's Talk
            <svg class="w-5 h-5 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </span>
        </a>
      </div>

      <!-- Social links with modern design -->
      <div class="social-links flex items-center gap-4">
        {
          landingIcons.map(({ ariaLabel, className, href, icon }: IconProps) => {
            return (
              <LandingIcon
                ariaLabel={ariaLabel}
                className={className}
                href={href}
                icon={icon}
              />
            );
          })
        }
      </div>
    </div>

    <!-- Enhanced illustration section -->
    <div class="hero-illustration my-8 xl:my-0 flex justify-center items-center flex-1">
      <div class="relative">
        <!-- Enhanced glow effect -->
        <div class="absolute inset-0 bg-gradient-to-r from-primary-400/30 via-secondary-400/30 to-accent-400/30 rounded-full blur-3xl pulse-glow"></div>
        <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 to-secondary-500/20 rounded-full blur-2xl pulse-glow" style="animation-delay: -1s;"></div>
        
        <!-- Glass morphism container -->
        <div class="relative bg-white/10 dark:bg-gray-800/10 backdrop-blur-xl rounded-3xl p-8 border border-white/20 dark:border-gray-700/30 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 group">
          <Icon name="landing" width="500" height="500" class="relative z-10 drop-shadow-2xl filter brightness-110 group-hover:scale-110 transition-transform duration-500" />
          
          <!-- Floating elements -->
          <div class="absolute -top-4 -right-4 w-6 h-6 bg-primary-400 rounded-full opacity-80 floating-dot" style="animation-delay: 0s;"></div>
          <div class="absolute -bottom-4 -left-4 w-4 h-4 bg-secondary-400 rounded-full opacity-80 floating-dot" style="animation-delay: -2s;"></div>
          <div class="absolute top-1/4 -left-6 w-3 h-3 bg-accent-400 rounded-full opacity-80 floating-dot" style="animation-delay: -4s;"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Enhanced Styles and Animations -->
<style>
  @keyframes floating {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-20px) rotate(120deg); }
    66% { transform: translateY(10px) rotate(240deg); }
  }

  @keyframes pulse-glow {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.05); }
  }

  @keyframes pulse-dot {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.2); opacity: 0.8; }
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes typewriter {
    from { width: 0; }
    to { width: 100%; }
  }

  @keyframes expanding-line {
    from { width: 0; }
    to { width: 6rem; }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slide-in-left {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes floating-dot {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-15px); }
  }

  @keyframes particles {
    0%, 100% { 
      transform: translateY(0px) translateX(0px);
      opacity: 0;
    }
    10%, 90% {
      opacity: 1;
    }
    50% {
      transform: translateY(-100px) translateX(50px);
      opacity: 1;
    }
  }

  @keyframes animated-gradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes animated-radial {
    0%, 100% { transform: rotate(0deg) scale(1); }
    50% { transform: rotate(180deg) scale(1.1); }
  }

  /* Component Animations */
  .floating-orb {
    animation: floating 8s ease-in-out infinite;
  }

  .pulse-glow {
    animation: pulse-glow 4s ease-in-out infinite;
  }

  .pulse-dot {
    animation: pulse-dot 2s ease-in-out infinite;
  }

  .gradient-text {
    background: linear-gradient(-45deg, #6366f1, #8b5cf6, #ec4899, #f59e0b);
    background-size: 400% 400%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-shift 3s ease infinite;
  }

  .floating-dot {
    animation: floating-dot 3s ease-in-out infinite;
  }

  .animated-gradient {
    background-size: 400% 400%;
    animation: animated-gradient 15s ease infinite;
  }

  .animated-radial {
    animation: animated-radial 20s linear infinite;
  }

  /* Particles */
  .particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: linear-gradient(45deg, #6366f1, #8b5cf6);
    border-radius: 50%;
    animation: particles 8s linear infinite;
  }

  .particle-1 { top: 20%; left: 20%; animation-delay: 0s; }
  .particle-2 { top: 40%; left: 80%; animation-delay: -2s; }
  .particle-3 { top: 80%; left: 60%; animation-delay: -4s; }
  .particle-4 { top: 60%; left: 10%; animation-delay: -6s; }
  .particle-5 { top: 30%; left: 70%; animation-delay: -8s; }

  /* Hero Content Animations */
  .hero-content {
    animation: fade-in-up 1s ease-out;
  }

  .status-badge {
    animation: fade-in-up 0.6s ease-out 0.2s both;
  }

  .hero-title .hero-greeting {
    animation: slide-in-left 0.8s ease-out 0.4s both;
  }

  .hero-title .hero-name {
    animation: slide-in-left 0.8s ease-out 0.6s both;
  }

  .hero-subtitle {
    animation: fade-in-up 0.6s ease-out 0.8s both;
  }

  .expanding-line {
    animation: expanding-line 1s ease-out 1s both;
  }

  .hero-description {
    animation: fade-in-up 0.6s ease-out 1s both;
  }

  .hero-buttons {
    animation: fade-in-up 0.6s ease-out 1.2s both;
  }

  .social-links {
    animation: fade-in-up 0.6s ease-out 1.4s both;
  }

  .hero-illustration {
    animation: fade-in-up 0.8s ease-out 0.6s both;
  }

  .highlight-text {
    position: relative;
    display: inline;
  }

  .highlight-text::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(to right, #6366f1, #8b5cf6);
    animation: expanding-line 1s ease-out 1.5s both;
  }

  /* Hover Effects */
  .cta-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 40px rgba(99, 102, 241, 0.4);
  }

  .cta-secondary:hover {
    transform: translateY(-2px);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .particle {
      display: none;
    }
  }
</style>
