---
import {Icon} from "astro-icon/components";
import { landingIcons } from "../data/LandingIcons";
import LandingIcon from "./LandingIcon.astro";

export interface IconProps {
  icon: string;
  href: string;
  className: string;
  ariaLabel: string;
}
---

<div
  id="home"
  class="min-h-screen flex justify-center items-center relative overflow-hidden pt-24"
  aria-label="landing"
>
  <!-- Enhanced Background with mesh gradient -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-blue-50/30 to-purple-50/30 dark:from-gray-950 dark:via-blue-950/20 dark:to-purple-950/20"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(56,189,248,0.1),transparent_25%),radial-gradient(circle_at_70%_80%,rgba(217,70,239,0.1),transparent_25%),radial-gradient(circle_at_80%_10%,rgba(249,115,22,0.08),transparent_25%)]"></div>
  </div>
  
  <!-- Animated background elements with improved aesthetics -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-96 h-96 bg-gradient-to-br from-primary-200/40 to-secondary-200/40 rounded-full mix-blend-multiply filter blur-3xl opacity-60 animate-float"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-br from-secondary-200/40 to-accent-200/40 rounded-full mix-blend-multiply filter blur-3xl opacity-60 animate-float" style="animation-delay: -2s;"></div>
    <div class="absolute top-1/3 right-1/3 w-80 h-80 bg-gradient-to-br from-accent-200/30 to-primary-200/30 rounded-full mix-blend-multiply filter blur-3xl opacity-50 animate-float" style="animation-delay: -1s;"></div>
  </div>

  <!-- Grid pattern overlay -->
  <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-30 dark:opacity-20"></div>

  <div class="relative z-10 flex justify-between items-center flex-col xl:flex-row w-[90%] max-w-8xl mx-auto py-20 gap-12">
    <div class="flex flex-col my-8 lg:my-0 justify-center items-start animate-slide-up flex-1">
      <!-- Badge -->
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/60 dark:bg-gray-800/60 backdrop-blur-xl border border-white/20 dark:border-gray-700/30 mb-8 shadow-lg">
        <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse mr-3"></div>
        <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Available for new projects</span>
      </div>

      <!-- Main heading with enhanced typography -->
      <h1 class="text-6xl lg:text-8xl xl:text-9xl font-black leading-none mb-6">
        <span class="block bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 dark:from-white dark:via-gray-100 dark:to-white bg-clip-text text-transparent">
          Hi! I'm
        </span>
        <span class="block bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-600 bg-clip-text text-transparent">
          Hassan
        </span>
      </h1>

      <!-- Subtitle with modern styling -->
      <div class="relative mb-8">
        <p class="text-2xl lg:text-4xl font-light text-gray-600 dark:text-gray-400 mb-2">
          Full Stack Developer
        </p>
        <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-full"></div>
      </div>

      <!-- Description with better readability -->
      <p class="text-lg lg:text-xl text-gray-600 dark:text-gray-400 mb-12 max-w-2xl leading-relaxed font-light">
        Crafting exceptional digital experiences with cutting-edge technologies. 
        <span class="text-gray-800 dark:text-gray-200 font-medium">Passionate about building scalable solutions</span> 
        that drive innovation and make a meaningful impact.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 mb-12">
        <a href="#projects" class="group relative px-8 py-4 bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-600 text-white rounded-2xl font-semibold transition-all duration-300 hover:shadow-2xl hover:shadow-primary-500/25 overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-r from-primary-700 via-secondary-700 to-accent-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <span class="relative z-10 flex items-center gap-2">
            View My Work
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </span>
        </a>
        
        <a href="#contact" class="group px-8 py-4 bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl border border-white/20 dark:border-gray-700/30 text-gray-700 dark:text-gray-300 rounded-2xl font-semibold hover:bg-white dark:hover:bg-gray-800 transition-all duration-300 shadow-lg hover:shadow-xl">
          <span class="flex items-center gap-2">
            Let's Talk
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </span>
        </a>
      </div>

      <!-- Social links with modern design -->
      <div class="flex items-center gap-4 animate-fade-in" style="animation-delay: 0.3s;">
        {
          landingIcons.map(({ ariaLabel, className, href, icon }: IconProps) => {
            return (
              <LandingIcon
                ariaLabel={ariaLabel}
                className={className}
                href={href}
                icon={icon}
              />
            );
          })
        }
      </div>
    </div>

    <!-- Enhanced illustration section -->
    <div class="my-8 xl:my-0 flex justify-center items-center animate-float flex-1">
      <div class="relative">
        <!-- Enhanced glow effect -->
        <div class="absolute inset-0 bg-gradient-to-r from-primary-400/30 via-secondary-400/30 to-accent-400/30 rounded-full blur-3xl"></div>
        <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 to-secondary-500/20 rounded-full blur-2xl animate-pulse"></div>
        
        <!-- Glass morphism container -->
        <div class="relative bg-white/10 dark:bg-gray-800/10 backdrop-blur-xl rounded-3xl p-8 border border-white/20 dark:border-gray-700/30 shadow-2xl">
          <Icon name="landing" width="500" height="500" class="relative z-10 drop-shadow-2xl filter brightness-110" />
        </div>
      </div>
    </div>
  </div>
</div>
