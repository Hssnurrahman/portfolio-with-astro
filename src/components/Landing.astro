---
import Icon from "astro-icon";
import { landingIcons } from "../data/LandingIcons";
import LandingIcon from "./LandingIcon.astro";

export interface IconProps {
  icon: string;
  href: string;
  className: string;
  ariaLabel: string;
}
---

<div
  id="home"
  class="flex xl:(flex-row justify-between) items-center flex-col w-83% m-auto py-7rem"
  aria-label="landing"
>
  <div class="flex flex-col my-[1rem] lg:my-0 justify-center items-start">
    <p class="text-6xl font-light text-shadow-lg shadow-orange-300">
      Hi! I'm Hassan
    </p>
    <p class="text-3xl mt-[0.75rem]">Full Stack Developer</p>
    <div class="flex items-center justify-start mt-[1.25rem]">
      {
        landingIcons.map(({ ariaLabel, className, href, icon }: IconProps) => {
          return (
            <LandingIcon
              ariaLabel={ariaLabel}
              className={className}
              href={href}
              icon={icon}
            />
          );
        })
      }
    </div>
  </div>

  <div class="my-[1.25rem] hidden xl:flex">
    <Icon name="landing" width="500" height="500" />
  </div>
</div>
