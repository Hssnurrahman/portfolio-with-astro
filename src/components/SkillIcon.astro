---
import { Icon } from "astro-icon/components";

import "../styles/Icon.scss";

export interface IconProps {
  icon: string;
  label: string;
  ariaLabel: string;
  className: string;
}

export interface Props {
  heading: string;
  icons: IconProps[];
}

const { heading, icons } = Astro.props as Props;
---

<!-- Skill Category Card -->
<div class="bg-white/70 dark:bg-gray-800/70 backdrop-blur-xl rounded-3xl p-8 border border-white/20 dark:border-gray-700/30 shadow-lg hover:shadow-xl transition-all duration-300 group">
  <!-- Category Header -->
  <div class="flex items-center mb-8">
    <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-secondary-500 rounded-2xl flex items-center justify-center mr-4 group-hover:scale-110 transition-transform duration-300">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
      </svg>
    </div>
    <div>
      <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-1" aria-label="skill-icon">
        {heading}
      </h3>
      <p class="text-sm text-gray-500 dark:text-gray-400">Professional level</p>
    </div>
  </div>

  <!-- Skills Grid -->
  <div class="grid grid-cols-3 sm:grid-cols-4 gap-4">
    {
      icons.map(({ icon, label, ariaLabel, className }: IconProps) => {
        return (
          <div class="group/item flex flex-col items-center justify-center cursor-pointer">
            <!-- Icon Container -->
            <div class={`relative p-4 rounded-2xl shadow-md hover:shadow-lg transition-all duration-300 group/item-hover:-translate-y-2 group/item-hover:scale-110 ${className}`}>
              <!-- Glow Effect -->
              <div class="absolute inset-0 bg-gradient-to-br from-white/30 to-white/10 rounded-2xl opacity-0 group/item-hover:opacity-100 transition-opacity duration-300"></div>
              
              <!-- Shine Effect -->
              <div class="absolute inset-0 bg-gradient-to-br from-white/20 via-transparent to-transparent rounded-2xl opacity-20"></div>
              
              <Icon
                name={icon}
                class="text-white relative z-10 drop-shadow-sm"
                aria-label={ariaLabel}
                width="28"
                height="28"
              />
            </div>
            
            <!-- Label -->
            <p class="text-xs font-medium mt-3 text-gray-600 dark:text-gray-400 group/item-hover:text-primary-600 dark:group/item-hover:text-primary-400 transition-colors duration-300 text-center">
              {label}
            </p>
          </div>
        );
      })
    }
  </div>
</div>
