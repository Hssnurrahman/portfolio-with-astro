---
import { projects } from "../data/Projects";
import Card from "./Card.astro";

export interface ProjectProps {
  name: string;
  description: string;
  href: string;
  tags: string[];
}
---

<section
  id="projects"
  class="py-24 bg-white dark:bg-gray-950"
  aria-label="projects"
>
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-4">
        Projects
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Recent work and side projects
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {
        projects.map(({ name, description, href, tags }: ProjectProps) => {
          return (
            <Card name={name} description={description} href={href} tags={tags} />
          );
        })
      }
    </div>

    <!-- CTA -->
    <div class="text-center">
      <a
        href="https://github.com"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-8 py-3 border-2 border-gray-900 dark:border-white text-gray-900 dark:text-white rounded-lg font-medium hover:bg-gray-50 dark:hover:bg-gray-900 transition-colors"
      >
        View More on GitHub
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
