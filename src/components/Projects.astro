---
import { projects } from "../data/Projects";
import Card from "./Card.astro";

export interface ProjectProps {
  name: string;
  description: string;
  href: string;
  tags: string[];
}
---

<div
  id="projects"
  class="py-24 relative overflow-hidden"
  aria-label="projects"
>
  <!-- Enhanced Background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-purple-50/30 dark:from-gray-950 dark:via-gray-900 dark:to-purple-950/30"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_20%,rgba(217,70,239,0.08),transparent_50%),radial-gradient(circle_at_80%_80%,rgba(56,189,248,0.08),transparent_50%)]"></div>
  </div>

  <div class="relative z-10 max-w-8xl mx-auto px-8">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/60 dark:bg-gray-800/60 backdrop-blur-xl border border-white/20 dark:border-gray-700/30 mb-6 shadow-lg">
        <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
        <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Featured Work</span>
      </div>
      
      <h2 class="text-5xl lg:text-7xl font-black mb-6">
        <span class="bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-600 bg-clip-text text-transparent">
          Selected
        </span>
        <span class="block text-gray-900 dark:text-white font-light">Projects</span>
      </h2>
      
      <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto leading-relaxed">
        A showcase of my latest work and creative solutions that drive real business impact
      </p>
    </div>
    
    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-8 mb-16">
      {
        projects.map(({ name, description, href, tags }: ProjectProps) => {
          return (
            <Card name={name} description={description} href={href} tags={tags} />
          );
        })
      }
    </div>

    <!-- Call to Action -->
    <div class="text-center">
      <div class="bg-gradient-to-r from-primary-600/10 via-secondary-600/10 to-accent-600/10 backdrop-blur-xl rounded-3xl p-12 border border-white/20 dark:border-gray-700/30 shadow-lg">
        <h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
          Interested in working together?
        </h3>
        <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
          I'm always excited to take on new challenges and collaborate on innovative projects.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#contact" class="px-8 py-4 bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-600 text-white rounded-2xl font-semibold hover:shadow-2xl hover:shadow-primary-500/25 transition-all duration-300 transform hover:scale-105">
            Start a Project
          </a>
          <a href="https://github.com" target="_blank" class="px-8 py-4 bg-white/80 dark:bg-gray-800/80 backdrop-blur-xl border border-white/20 dark:border-gray-700/30 text-gray-700 dark:text-gray-300 rounded-2xl font-semibold hover:bg-white dark:hover:bg-gray-800 transition-all duration-300 shadow-lg hover:shadow-xl">
            View All Projects
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
