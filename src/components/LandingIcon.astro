---
import Icon from "astro-icon";

import "../styles/Icon.scss";

export interface Props {
  href: string;
  className: string;
  icon: string;
  ariaLabel: string;
}

const { href, className, icon, ariaLabel } = Astro.props as Props;

const hasName =
  icon.includes(ariaLabel) && !icon.includes("linkedin") && `ml-2 mr-2`;

const linkedin = icon.includes("linkedin") && `mr-2`;
---

<a
  href={href}
  aria-label={ariaLabel}
  target="_blank"
  aria-label="landing-icon"
  class={`p-[0.5rem] border-none rounded ${className} cursor-pointer ${linkedin} ${hasName} hover:drop-shadow-lg`}
>
  <Icon name={icon} class="text-white p-[0.375rem]" width="48" height="48" />
</a>
