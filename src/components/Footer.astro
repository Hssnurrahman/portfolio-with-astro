---
import { Icon } from "astro-icon/components";
---

<footer
  class="bg-gradient-to-r from-gray-900 via-primary-900 to-secondary-900 text-white py-16"
  aria-label="footer"
>
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid md:grid-cols-3 gap-8 mb-8">
      <div class="space-y-4">
        <div class="flex items-center space-x-3">
          <div class="w-10 h-10 rounded-full bg-gradient-to-r from-primary-500 to-secondary-500 flex items-center justify-center">
            <span class="text-white font-bold text-xl">H</span>
          </div>
          <span class="text-2xl font-bold">Hassan</span>
        </div>
        <p class="text-gray-300 leading-relaxed">
          Full Stack Developer passionate about creating exceptional digital experiences
        </p>
      </div>
      
      <div class="space-y-4">
        <h4 class="text-lg font-semibold">Quick Links</h4>
        <ul class="space-y-2">
          <li><a href="#home" class="text-gray-300 hover:text-white transition-colors duration-300">Home</a></li>
          <li><a href="#skills" class="text-gray-300 hover:text-white transition-colors duration-300">Skills</a></li>
          <li><a href="#projects" class="text-gray-300 hover:text-white transition-colors duration-300">Projects</a></li>
          <li><a href="#about" class="text-gray-300 hover:text-white transition-colors duration-300">About</a></li>
          <li><a href="#contact" class="text-gray-300 hover:text-white transition-colors duration-300">Contact</a></li>
        </ul>
      </div>
      
      <div class="space-y-4">
        <h4 class="text-lg font-semibold">Built With</h4>
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2 bg-white/10 rounded-full px-4 py-2">
            <Icon
              name="simple-icons:astro"
              width="20"
              height="20"
              class="text-orange-400"
            />
            <span class="text-sm">Astro</span>
          </div>
          <div class="flex items-center space-x-2 bg-white/10 rounded-full px-4 py-2">
            <Icon
              name="mdi:tailwind"
              width="20"
              height="20"
              class="text-cyan-400"
            />
            <span class="text-sm">Tailwind</span>
          </div>
        </div>
      </div>
    </div>
    
    <div class="border-t border-gray-700 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-gray-300 text-sm">
          © 2024 Hassan. All rights reserved.
        </p>
        <p class="text-gray-300 text-sm">
          Designed & Built with ❤️
        </p>
      </div>
    </div>
  </div>
</footer>
