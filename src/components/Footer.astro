---
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();
---

<footer
  class="bg-gray-900 dark:bg-black text-white py-12"
  aria-label="footer"
>
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid md:grid-cols-3 gap-8 mb-8">
      <!-- Brand -->
      <div class="space-y-4">
        <div class="text-2xl font-bold">Hassan</div>
        <p class="text-gray-400">
          MERN Stack Developer
        </p>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h4 class="font-semibold">Quick Links</h4>
        <ul class="space-y-2">
          {[
            { href: '#home', label: 'Home' },
            { href: '#skills', label: 'Skills' },
            { href: '#projects', label: 'Projects' },
            { href: '#about', label: 'About' },
            { href: '#contact', label: 'Contact' }
          ].map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Built With -->
      <div class="space-y-4">
        <h4 class="font-semibold">Built With</h4>
        <div class="flex items-center gap-4">
          <div class="flex items-center gap-2">
            <Icon
              name="simple-icons:astro"
              width="20"
              height="20"
              class="text-orange-400"
            />
            <span class="text-gray-400 text-sm">Astro</span>
          </div>
          <div class="flex items-center gap-2">
            <Icon
              name="mdi:tailwind"
              width="20"
              height="20"
              class="text-cyan-400"
            />
            <span class="text-gray-400 text-sm">Tailwind</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom -->
    <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-gray-400 text-sm">
        © {currentYear} Hassan. All rights reserved.
      </p>
      <p class="text-gray-400 text-sm">
        Designed & Built with ❤️
      </p>
    </div>
  </div>
</footer>
