---
import { Icon } from "astro-icon/components";
---

<div
  id="about"
  class="py-24 relative overflow-hidden"
  aria-label="about"
>
  <!-- Enhanced Background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-br from-secondary-50/50 via-white to-accent-50/50 dark:from-gray-950 dark:via-secondary-950/20 dark:to-accent-950/20"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_30%,rgba(217,70,239,0.08),transparent_50%),radial-gradient(circle_at_70%_70%,rgba(249,115,22,0.08),transparent_50%)]"></div>
  </div>

  <div class="relative z-10 max-w-8xl mx-auto px-8">
    <div class="grid lg:grid-cols-2 gap-20 items-center">
      
      <!-- Content Section -->
      <div class="space-y-8">
        <!-- Section Header -->
        <div class="space-y-6">
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/60 dark:bg-gray-800/60 backdrop-blur-xl border border-white/20 dark:border-gray-700/30 mb-6 shadow-lg">
            <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">About Me</span>
          </div>
          
          <h2 class="text-5xl lg:text-7xl font-black leading-tight">
            <span class="bg-gradient-to-r from-primary-600 via-secondary-600 to-accent-600 bg-clip-text text-transparent">
              Passionate
            </span>
            <span class="block text-gray-900 dark:text-white font-light">Developer</span>
          </h2>
          
          <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-full"></div>
        </div>
        
        <!-- Story Section -->
        <div class="space-y-8">
          <div class="bg-white/60 dark:bg-gray-800/60 backdrop-blur-xl rounded-3xl p-8 border border-white/20 dark:border-gray-700/30 shadow-lg">
            <p class="text-xl text-gray-700 dark:text-gray-300 leading-relaxed mb-6">
              I've been building <span class="text-primary-600 dark:text-primary-400 font-semibold">profitable products</span> for 2+ years, specializing in creating exceptional digital experiences that solve real-world problems and drive business growth.
            </p>
            
            <p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed">
              My expertise spans across cutting-edge Web & Mobile technologies, with a focus on delivering scalable solutions that enhance user engagement and create meaningful impact.
            </p>
          </div>
          
          <!-- Enhanced Stats Grid -->
          <div class="grid sm:grid-cols-2 gap-6">
            <div class="group bg-gradient-to-br from-primary-500/10 to-primary-600/10 backdrop-blur-xl rounded-3xl p-8 border border-primary-200/30 dark:border-primary-700/30 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mr-4 group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <div class="text-4xl font-black text-primary-600 dark:text-primary-400 mb-1 group-hover:scale-105 transition-transform duration-300">2+</div>
                  <div class="text-gray-600 dark:text-gray-400 font-medium">Years Experience</div>
                </div>
              </div>
            </div>
            
            <div class="group bg-gradient-to-br from-secondary-500/10 to-secondary-600/10 backdrop-blur-xl rounded-3xl p-8 border border-secondary-200/30 dark:border-secondary-700/30 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-gradient-to-br from-secondary-500 to-secondary-600 rounded-2xl flex items-center justify-center mr-4 group-hover:scale-110 transition-transform duration-300">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                  </svg>
                </div>
                <div>
                  <div class="text-4xl font-black text-secondary-600 dark:text-secondary-400 mb-1 group-hover:scale-105 transition-transform duration-300">50+</div>
                  <div class="text-gray-600 dark:text-gray-400 font-medium">Projects Completed</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Skills Highlight -->
          <div class="bg-gradient-to-r from-accent-500/10 via-primary-500/10 to-secondary-500/10 backdrop-blur-xl rounded-3xl p-8 border border-white/20 dark:border-gray-700/30 shadow-lg">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Core Expertise</h3>
            <div class="flex flex-wrap gap-3">
              {['Full-Stack Development', 'Mobile Applications', 'UI/UX Design', 'Cloud Architecture', 'DevOps'].map((skill) => (
                <span class="px-4 py-2 bg-white/60 dark:bg-gray-800/60 backdrop-blur-sm rounded-xl text-sm font-medium text-gray-700 dark:text-gray-300 border border-white/20 dark:border-gray-700/30">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
      
      <!-- Enhanced Illustration Section -->
      <div class="relative order-first lg:order-last">
        <!-- Multiple Glow Effects -->
        <div class="absolute inset-0 bg-gradient-to-r from-primary-400/20 via-secondary-400/20 to-accent-400/20 rounded-full blur-3xl"></div>
        <div class="absolute inset-0 bg-gradient-to-br from-primary-500/10 to-secondary-500/10 rounded-full blur-2xl animate-pulse"></div>
        
        <!-- Glass Container -->
        <div class="relative bg-white/20 dark:bg-gray-800/20 backdrop-blur-2xl rounded-3xl p-12 border border-white/30 dark:border-gray-700/30 shadow-2xl">
          <!-- Decorative Elements -->
          <div class="absolute top-6 right-6 w-4 h-4 bg-green-500 rounded-full animate-pulse"></div>
          <div class="absolute top-6 right-12 w-3 h-3 bg-yellow-500 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
          <div class="absolute top-6 right-20 w-3 h-3 bg-red-500 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
          
          <Icon name="about" width="450" height="450" class="relative z-10 drop-shadow-2xl filter brightness-110" />
          
          <!-- Floating Elements -->
          <div class="absolute -top-4 -left-4 w-8 h-8 bg-gradient-to-br from-primary-400 to-primary-600 rounded-2xl opacity-80 animate-float"></div>
          <div class="absolute -bottom-4 -right-4 w-6 h-6 bg-gradient-to-br from-secondary-400 to-secondary-600 rounded-xl opacity-80 animate-float" style="animation-delay: -1s;"></div>
          <div class="absolute top-1/3 -right-6 w-4 h-4 bg-gradient-to-br from-accent-400 to-accent-600 rounded-lg opacity-80 animate-float" style="animation-delay: -2s;"></div>
        </div>
      </div>
    </div>
  </div>
</div>
